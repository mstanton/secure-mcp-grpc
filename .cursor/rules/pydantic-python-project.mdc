description: 
globs: 
alwaysApply: false
---
.PHONY: setup lint format test check coverage clean

setup:
	uv venv
	uv pip install -e ".[dev]"
	pre-commit install

lint:
	ruff check .

format:
	black .
	ruff check . --fix

test:
	pytest

check:
	mypy src tests

coverage:
	pytest --cov=src --cov-report=html

security:
	bandit -r src

clean:
	rm -rf dist build *.egg-info .pytest_cache .coverage htmlcov
	find . -type d -name __pycache__ -exec rm -rf {} +
	find . -type d -name "*.egg-info" -exec rm -rf {} +
	find . -type f -name "*.pyc" -delete